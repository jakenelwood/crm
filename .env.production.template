# Copy this file to .env.production and fill in the actual values
# NEVER commit actual production secrets to version control

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string with SSL enabled
DATABASE_URL=postgresql://username:password@host:5432/database?ssl=true

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 64
NEXTAUTH_SECRET=your_super_secure_nextauth_secret_at_least_32_characters_long
NEXTAUTH_URL=https://your-production-domain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=AICRM
NEXT_PUBLIC_BASE_URL=https://your-production-domain.com
NEXT_PUBLIC_API_BASE_URL=https://api.your-production-domain.com

# =============================================================================
# RINGCENTRAL INTEGRATION (Optional)
# =============================================================================
RINGCENTRAL_CLIENT_ID=your_ringcentral_client_id
RINGCENTRAL_CLIENT_SECRET=your_ringcentral_client_secret
RINGCENTRAL_SERVER=https://platform.ringcentral.com
RINGCENTRAL_USERNAME=your_ringcentral_username
RINGCENTRAL_EXTENSION=your_ringcentral_extension
RINGCENTRAL_PASSWORD=your_ringcentral_password
RINGCENTRAL_FROM_NUMBER=your_ringcentral_phone_number

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email service configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# SMS service configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_SAMPLE_DATA=false
NEXT_PUBLIC_ENABLE_PDF_EXPORT=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_DATABASE_QUERIES=false
DEBUG_MODE=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. All secrets must be at least 32 characters long
# 2. Use HTTPS URLs for all external services in production
# 3. Enable SSL for database connections
# 4. Rotate secrets regularly
# 5. Use environment-specific secrets (don't reuse between environments)
# 6. Store secrets in a secure secret management system
# 7. Never commit this file with actual values to version control

# =============================================================================
# VALIDATION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# [ ] All placeholder values are replaced with actual secrets
# [ ] All secrets are at least 32 characters long
# [ ] All URLs use HTTPS protocol
# [ ] Database connection uses SSL
# [ ] JWT_SECRET is not 'dev-secret-key'
# [ ] NEXTAUTH_SECRET is not a default value
# [ ] All external service credentials are valid
# [ ] Feature flags are set appropriately for production
# [ ] Logging level is set to 'info' or 'warn' (not 'debug')
# [ ] DEBUG_MODE is set to false
